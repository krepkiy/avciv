<p>реєстрація</p>
<p>Find me in app/views/users/new.html.erb</p>

<%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label 'Ім’я користувача' %><br>
      <%= f.text_field :name %>
    </div><br>
    <div class="field">
      <%= f.label 'Адреса електронної пошти' %><br>
      <%= f.email_field :email, class: "form-control", id:"inputEmail", placeholder: "Email" %>
    </div><br>
    <div class="field">
      <%= f.label 'Пароль користувача' %><br>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
<div class="action"><br>
  <%= f.submit 'Зареєструватись', class:"btn btn-primary" %>
</div>
<% end %>