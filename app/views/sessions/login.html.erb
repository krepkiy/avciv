<% provide(:title, 'Вхід') %>
<h1>Sessions#login</h1>
<p>Find me in app/views/sessions/login.html.erb</p>
<p>Сторінка для входу(аутентифікації)</p>

<%= form_tag('/sessions', method: :post) do %>
    <div class="field">
      <%= text_field_tag :email %>
    </div><br>
    <div class="field">
      <%= password_field_tag :password %>
    </div>
    <div class="action"><br>
      <%= submit_tag 'Увійти', class:"btn btn-primary" %>
    </div>
<% end %>